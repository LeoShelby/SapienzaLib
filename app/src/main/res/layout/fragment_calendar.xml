<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/calendar_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:compactCalendarBackgroundColor="@color/transparent"
        app:compactCalendarCurrentDayBackgroundColor="#317BD6"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#739DE5"
        app:compactCalendarMultiEventIndicatorColor="#AA3030"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextColor="#1D1A1A"
        app:compactCalendarTextSize="12sp" />

    <ListView
        android:id="@+id/calendar_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent" >
    </ListView>

</LinearLayout>
